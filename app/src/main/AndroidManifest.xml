<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.VFeskin.collegecoursetracker">

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegeCourseTracker">
        <activity
            android:name=".Controller.Reports"
            android:exported="false" />
        <activity
            android:name=".Controller.InstructorInfo"
            android:exported="false"
            android:label="Instructor Quick View" />
        <activity
            android:name=".CreateNewUser"
            android:exported="false"
            android:label="New User" />
        <activity
            android:name=".Controller.EditNote"
            android:exported="false"
            android:label="Update Note" />
        <activity
            android:name=".Controller.NewNote"
            android:exported="false"
            android:label="Add Note" />
        <activity
            android:name=".Controller.DetailedNote"
            android:exported="false"
            android:label="Class Note" />
        <activity
            android:name=".Controller.NoteList"
            android:exported="false"
            android:label="List of Notes" />

        <receiver
            android:name=".Utility.DateReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".Controller.EditAssessment"
            android:exported="false"
            android:label="Update Assessment" />
        <activity
            android:name=".Controller.EditCourse"
            android:exported="false"
            android:label="Update Course" />
        <activity
            android:name=".Controller.EditTerm"
            android:exported="false"
            android:label="Update Term" />
        <activity
            android:name=".Controller.DetailedAssessment"
            android:exported="false"
            android:label="Assessment Details" />
        <activity
            android:name=".Controller.DetailedCourse"
            android:exported="false"
            android:label="Course Details" />
        <activity
            android:name=".Controller.DetailedTerm"
            android:exported="false"
            android:label="Term Details" />
        <activity
            android:name=".Controller.AssessmentList"
            android:exported="false"
            android:label="List of Assessments" />
        <activity
            android:name=".Controller.CourseList"
            android:exported="false"
            android:label="List of Courses" />
        <activity
            android:name=".Controller.TermList"
            android:exported="true"
            android:label="List of Terms" />
        <activity
            android:name=".Controller.NewAssessment"
            android:exported="true"
            android:label="New Assessment" />
        <activity
            android:name=".Controller.NewCourse"
            android:exported="true"
            android:label="New Course" />
        <activity
            android:name=".Controller.NewTerm"
            android:exported="true"
            android:label="New Term" />
        <activity
            android:name=".HomeScreen"
            android:exported="true"
            android:label="College Course Tracker Application">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>